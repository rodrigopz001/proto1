@model IEnumerable<Proto1.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Contraseña
        </th>
        <th>
            Estado
        </th>
        <th>
            Tipo de usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @{ 
                if (item.is_active == 0)
                {
                    @:Inhabilitado
                }

                if(item.is_active == 1)
                {
                    @:Habilitado
                }
            }
        </td>
        <td>
            @{ 
                if (item.user_type == 1) {

                    @:Administrador
                }

                if (item.user_type == 2)
                {

                    @:Empleado
                }
            }
        </td>
        <td>
            @Html.ActionLink("Editar", "Update", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
