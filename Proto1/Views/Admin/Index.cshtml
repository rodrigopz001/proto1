@model IEnumerable<Proto1.Models.User>
@using System.Data
@using System.Data.SqlClient 

@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Contraseña
        </th>
        <th>
            Estado
        </th>
        <th>
            Tipo de usuario
        </th>
        <th>
            Base de Datos
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @if (item.is_active == 0)
            {
                @:Inhabilitado
            }
            else
            {
                @:Habilitado
            }
        </td>
        <td>
            @if (item.user_type < 2) {

                @:Administrador
            }
            else
            {

                @:Cliente

            }
        </td>
        <td>
            @{

                DataTable dt = new DataTable();
                string strConString = @"Data Source=.\SQLEXPRESS;Initial Catalog=catalogo;Integrated Security=True";
                SqlConnection con = new SqlConnection(strConString);
                con.Open();
                SqlCommand cmd = new SqlCommand("SELECT name_db FROM Credencial c, Rutas r WHERE (c.id_ruta = r.id) AND (c.id = @id)", con);
                cmd.Parameters.AddWithValue("@id", item.id);
                SqlDataAdapter da = new SqlDataAdapter(cmd);
                da.Fill(dt);
                con.Close();

                String name_db = dt.Rows[0]["name_db"].ToString();
                @name_db

             } 
        </td>
        <td>
            @Html.ActionLink("Editar", "Update", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
